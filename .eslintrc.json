{
  "extends": [
    "next",
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:storybook/recommended",
    "prettier"
  ],
  "globals": {
    "React": "readonly"
  },
  "rules": {
    "no-unused-vars": [
      1,
      {
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ],
    "no-console": 1
  },
  "ignorePatterns": [
    "!.*",
    "dist",
    "node_modules",
    "package-lock.json",
    ".next",
    "build",
    "pubilc"
  ]
}
